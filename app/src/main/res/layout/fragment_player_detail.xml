<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:padding="16dp"
            android:text="返回"
            android:textColor="@color/smssdk_white"/>

        <xyz.egoistk21.iFantasy.widget.CircleImageView
            android:id="@+id/civ_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:layout_toEndOf="@id/tv_back"
            android:src="@drawable/avatar"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/civ_avatar"
            android:layout_toEndOf="@id/civ_avatar"
            android:text="J.詹姆斯"
            android:textColor="@color/smssdk_white"
            android:textSize="22sp"/>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/civ_avatar"
            android:layout_marginEnd="64dp"
            android:layout_toEndOf="@+id/civ_avatar"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="球队/骑士"
                android:textColor="@color/smssdk_white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_cloth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="球衣号/23号"
                android:textColor="@color/smssdk_white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="位置/SF"
                android:textColor="@color/smssdk_white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="评分/99"
                android:textColor="@color/smssdk_white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="4dp"
                android:text="薪资/3329万"
                android:textColor="@color/smssdk_white"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_play_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/civ_avatar"
            android:layout_toStartOf="@id/btn_dismissal"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="出战"/>

        <Button
            android:id="@+id/btn_dismissal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ll"
            android:layout_alignTop="@id/civ_avatar"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:text="解约"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/container_frame"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabSelectedTextColor="@color/smssdk_white"
            app:tabTextColor="@color/smssdk_white">

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="资料"/>

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="投篮热图"/>

            <android.support.design.widget.TabItem
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据"/>

        </android.support.design.widget.TabLayout>

        <xyz.egoistk21.iFantasy.widget.NoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
