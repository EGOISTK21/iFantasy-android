<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/head">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:text="返回"
                android:textColor="@color/smssdk_white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="招募"
                android:textColor="@color/smssdk_white"
                android:textSize="24sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="180dp"
            android:background="@drawable/data_frame"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资金"
                android:textColor="@color/smssdk_white"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="%万"
                android:textColor="@color/smssdk_white"/>

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/plus"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:background="@drawable/container_frame"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="幸运招募"
                android:textColor="@color/smssdk_white"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_one_recruit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="免费"
                    android:textColor="@color/smssdk_white"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_one_recruit_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/one_recruit"
                    android:textColor="@color/smssdk_white"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_lucky_recruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招募1次"/>

                <TextView
                    android:id="@+id/tv_one_recruit_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:text="免费"
                    android:textColor="@color/smssdk_white"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:text="必得评分80+的球员"
                    android:textColor="@color/smssdk_white"
                    android:textSize="12sp"/>

                <Button
                    android:id="@+id/btn_penta_lucky_recruit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="招募5次"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:maxLines="1"
                    android:text="400万"
                    android:textColor="@color/smssdk_white"
                    android:textSize="12sp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:background="@drawable/container_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_direct_recruit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="定向招募"
                android:textColor="@color/smssdk_white"
                android:textSize="20sp"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/tbl_recruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_direct_recruit_title"
                android:layout_toStartOf="@id/ddm_recruit"
                app:tabGravity="fill"
                app:tabSelectedTextColor="@color/smssdk_white"
                app:tabTextColor="@color/smssdk_white">

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ALL"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PF"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SF"
                        app:tabSelectedTextColor="@color/smssdk_white"
                        app:tabTextColor="@color/smssdk_white"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SG"/>

                    <android.support.design.widget.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PG"/>

                </android.support.design.widget.TabLayout>

            <xyz.egoistk21.iFantasy.widget.NoScrollViewPager
                android:layout_below="@id/tbl_recruit"
                android:id="@+id/vp_recruit"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.baiiu.filter.DropDownMenu
                android:id="@+id/ddm_recruit"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_direct_recruit_title">

                <TextView
                    android:id="@+id/mFilterContentView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="22sp"
                    android:visibility="gone" />

            </com.baiiu.filter.DropDownMenu>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
